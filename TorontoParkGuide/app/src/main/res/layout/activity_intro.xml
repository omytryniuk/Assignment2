<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.yugenshtil.torontoparkguide.Intro"
    >

    <TextView android:text="Welcome to Toronto Parks Guide Application" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/greetings"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showAll"
        android:layout_marginTop="29dp"
        android:src="@drawable/showall"
        android:layout_below="@+id/greetings"
        android:layout_alignLeft="@+id/greetings"
        android:layout_alignStart="@+id/greetings" />

    <ImageButton
        android:layout_width="260dp"
        android:layout_height="190dp"
        android:id="@+id/Facili"
        android:src="@drawable/facili"
        android:layout_below="@+id/showAll"
        android:text="Parks"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
